#ODE solver options
# REACTOR mode
ode.dt  = 1.e-05
ode.ndt = 1
# Reactor formalism: 1=full e, 2=full h
ode.reactor_type  = 1
#verbose
ode.verbose = 1
# abs and rel tolerances for ODE solve
#ode.rtol = 1e-6
#ode.atol = 1e-6
# Use variable-specific abs tols in ODE solve
# Note that atol becomes a factor
#ode.use_typ_vals = 1
#ode.typ_vals = 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1.0e-7 1500.0
# Select ARK/CV-ODE Jacobian eval: 0=FD 1=AJ
ode.analytical_jacobian = 1
#CVODE SPECIFICS
# Choose between sparse, sparse_custom, and GMRES
cvode.solve_type = GMRES
#ARKODE SPECIFICS
# Choose if using implicit or explicit solve -- if expl no AJ needed
#arkode.implicit_solve = 1
#arkode.use_erkode     = 0

#AMR options
amr.n_cell = 2 256 2
# Choose name of output pltfile
amr.plot_file  = plt

#OTHER
# Max size of problem
max_grid_size  = 16
# Fuel species 
fuel_name      = CH4

amrex.fpe_trap_invalid = 1
amrex.fpe_trap_zero = 1
amrex.fpe_trap_overflow = 1
